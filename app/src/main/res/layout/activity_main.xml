<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">
    <data>
        <variable
            name="viewModel"
            type="com.sky.calculator.ViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:orientation="vertical"
            android:padding="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.9"
                android:gravity="end|bottom"
                android:textSize="@dimen/text_size"
                android:text="@{viewModel.translateText.toString()}">
            </TextView>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.1"
                android:columnCount="4"
                android:rowCount="5">

                <Button
                    android:id="@+id/buttonCE"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="70dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:text="CE"
                    android:onClick="@{() -> viewModel.clearText()}"/>

                <Button
                    android:id="@+id/buttonPM"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="@dimen/btn_height"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:text="+/-" />

                <Button
                    android:id="@+id/buttonPercent"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="@dimen/btn_height"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:text="%" />

                <Button
                    android:id="@+id/buttonDelete"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="@dimen/btn_height"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:text="/"
                    android:onClick="@{(it) -> viewModel.getSymbol(it)}"/>

                <Button
                    android:id="@+id/button7"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="@dimen/btn_height"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:text="7"
                    android:onClick="@{(it) -> viewModel.getNumber(it)}"/>

                <Button
                    android:id="@+id/button8"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="@dimen/btn_height"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:text="8"
                    android:onClick="@{(it) -> viewModel.getNumber(it)}"/>

                <Button
                    android:id="@+id/button9"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="@dimen/btn_height"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:text="9"
                    android:onClick="@{(it) -> viewModel.getNumber(it)}"/>

                <Button
                    android:id="@+id/button0"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="@dimen/btn_height"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:text="0"
                    android:onClick="@{(it) -> viewModel.getNumber(it)}"/>

                <Button
                    android:id="@+id/button5"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="@dimen/btn_height"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:text="5"
                    android:onClick="@{(it) -> viewModel.getNumber(it)}"/>

                <Button
                    android:id="@+id/buttonMinus"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="@dimen/btn_height"
                    android:layout_row="2"
                    android:layout_column="3"
                    android:text="-"
                    android:onClick="@{(it) -> viewModel.getSymbol(it)}"/>

                <Button
                    android:id="@+id/button2"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="@dimen/btn_height"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:text="2"
                    android:onClick="@{(it) -> viewModel.getNumber(it)}"/>

                <Button
                    android:id="@+id/buttonDot"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="@dimen/btn_height"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:text="."
                    android:onClick="@{(it) -> viewModel.getNumber(it)}"/>

                <Button
                    android:id="@+id/button3"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="@dimen/btn_height"
                    android:layout_row="3"
                    android:layout_column="2"
                    android:text="3"
                    android:onClick="@{(it) -> viewModel.getNumber(it)}"/>

                <Button
                    android:id="@+id/button4"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="@dimen/btn_height"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:text="4"
                    android:onClick="@{(it) -> viewModel.getNumber(it)}"/>

                <Button
                    android:id="@+id/button1"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="@dimen/btn_height"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:text="1"
                    android:onClick="@{(it) -> viewModel.getNumber(it)}"/>

                <Button
                    android:id="@+id/buttonMultiplication"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="@dimen/btn_height"
                    android:layout_row="1"
                    android:layout_column="3"
                    android:text="*"
                    android:onClick="@{(it) -> viewModel.getSymbol(it)}"/>

                <Button
                    android:id="@+id/button6"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="@dimen/btn_height"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:text="6"
                    android:onClick="@{(it) -> viewModel.getNumber(it)}"/>

                <Button
                    android:id="@+id/buttonEquals"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="@dimen/btn_height"
                    android:layout_row="4"
                    android:layout_column="2"
                    android:text="="
                    android:onClick="@{() -> viewModel.equals()}"/>

                <Button
                    android:id="@+id/buttonPlus"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="@dimen/btn_double_height"
                    android:layout_row="3"
                    android:layout_rowSpan="2"
                    android:layout_column="3"
                    android:text="+"
                    android:onClick="@{(it) -> viewModel.getSymbol(it)}"/>

            </GridLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
